# Firebase Configuration
# Get these from: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# Anthropic AI API
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_api_key_here

# Keywords AI Telemetry (optional)
# Get your API key from: https://keywordsai.co/
KEYWORDS_AI_API_KEY=your_keywords_ai_api_key_here

# Klavis AI MCP (hosted Notion + Mem0 integration) (optional)
# Get your credentials from: https://www.klavis.ai/
KLAVIS_API_KEY=your_klavis_api_key_here
KLAVIS_BEARER_TOKEN=your_klavis_bearer_token_here
KLAVIS_DIRECT_URL=https://strata.klavis.ai/mcp/?strata_id=your_strata_id_here

# Pinecone Vector Database (for RAG)
# Get your API key from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=poppy-documents

# OpenAI API (for embeddings)
# Get your API key from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# OneSignal Browser Push Notifications
# Get these from: https://onesignal.com/ (Settings > Keys & IDs)
NEXT_PUBLIC_ONESIGNAL_APP_ID=your_onesignal_app_id_here
ONESIGNAL_API_KEY=your_onesignal_rest_api_key_here

# Knock Notifications (legacy - can be removed)
KNOCK_API_KEY=your_knock_api_key_here
NEXT_PUBLIC_KNOCK_PUBLIC_API_KEY=your_knock_public_api_key_here
NEXT_PUBLIC_KNOCK_FEED_ID=your_knock_feed_id_here
